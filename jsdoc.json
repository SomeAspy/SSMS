{
    "source": {
        "includePattern": ".+\\.js(doc|x)?$",
        "include": [
            "src"
        ],
        "exclude": [
            "node_modules",
            "out",
            ".vscode",
            ".github"
        ]
    },
    "recurseDepth": 10,
    "opts": {
        "destination": "./docs/",
        "recurse": true,
        "encoding": "utf8",
        "private": true,
        "readme": "./.github/README.md",
        "verbose": true,
        "template": "node_modules/better-docs"
    }
}
