{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "jsdoc"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended-type-checked",
        "plugin:jsdoc/recommended"
    ],
    "root": true,
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "project": true,
        "tsconfigRootDir": "tsconfig.json"
    },
    "rules":{
        "jsdoc/require-param-type": 0,
        "jsdoc/require-returns-type": 0
    },
    "ignorePatterns":[
        "dist",
        "docs",
        "node_modules"
    ]
}